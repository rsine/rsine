<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd
	   					   http://www.springframework.org/schema/util
	   					   http://www.springframework.org/schema/util/spring-util-3.0.xsd
	   					   http://www.springframework.org/schema/context
	   					   http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="eu.lod2.rsine"/>

    <bean id="managedServerSparqlQuery" class="java.lang.String">
        <constructor-arg value="http://localhost:3030/dataset/query" />
    </bean>

    <bean id="managedServerSparqlUpdate" class="java.lang.String">
        <constructor-arg value="http://localhost:3030/dataset/update" />
    </bean>

    <bean id="changeSetService" class="eu.lod2.rsine.changesetservice.ChangeSetService">
        <constructor-arg value="2221"/>
    </bean>

    <bean id="queryEvaluator" class="eu.lod2.rsine.queryhandling.QueryEvaluator">
        <constructor-arg index="0" ref="managedServerSparqlQuery" />
        <constructor-arg index="1" value="" />
    </bean>

    <bean id="remoteServiceDetector" class="eu.lod2.rsine.remotenotification.UnavailableRemoteServiceDetector"/>
    <bean id="remoteNotificationServiceBase" class="eu.lod2.rsine.remotenotification.NullRemoteNotificationService"/>

</beans>